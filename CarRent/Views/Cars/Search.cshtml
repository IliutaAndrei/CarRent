@model List<CarRent.Models.Car>

@{
    ViewData["Title"] = "Rezultate Căutare Mașini";
}

<h1>@ViewData["Title"]</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Marcă</th>
                <th>Model</th>
                <th>An</th>
                <th>Combustibil</th>
                <th>Transmisie</th>
                <th>Disponibilă</th>
                <th>Preț/Zi</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.YearOfFabrication</td>
                    <td>@car.FuelType</td>
                    <td>@car.TransmissionType</td>
                    <td>@car.IsAvailable</td>
                    <td>@car.PricePerDay.ToString("C")</td>
                    <td><a href="#">Detalii</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nicio mașină nu corespunde criteriilor de căutare.</p>
}