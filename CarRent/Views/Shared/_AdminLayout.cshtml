<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Panou de Administrare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            font-family: 'DM Sans', sans-serif;
            background-color: #f4f4f9;
        }

        .navbar-brand {
            font-family: 'Roboto', sans-serif;
            font-weight: 700;
            color: #2c3e50;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #34495e;
            margin-right: 15px;
        }

            .navbar-nav .nav-link:hover,
            .navbar-nav .nav-link.active {
                color: #007bff;
            }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(52, 73, 94, 0.8)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'%3e%3c/path%3e%3c/svg%3e");
        }

        .container {
            max-width: 1200px;
        }

        .page-content {
            padding-top: 30px;
            padding-bottom: 30px;
        }

        .admin-panel {
            padding: 30px;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 30px;
        }

            .admin-panel h1 {
                font-size: 28px;
                font-weight: 600;
                margin-bottom: 30px;
                color: #2c3e50;
                text-align: center;
                border-bottom: 2px solid #e0e0e0;
                padding-bottom: 20px;
            }

        .admin-menu {
            list-style: none;
            padding: 0;
            margin-bottom: 30px;
        }

            .admin-menu li {
                margin-bottom: 15px;
            }

                .admin-menu li a {
                    display: block;
                    padding: 15px 20px;
                    background-color: #3498db;
                    color: white;
                    text-decoration: none;
                    border-radius: 8px;
                    transition: background-color 0.3s ease, transform 0.2s ease;
                    font-weight: 500;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                    border: none;
                    text-align: center;
                }

                    .admin-menu li a:hover {
                        background-color: #2980b9;
                        transform: translateY(-2px);
                    }

                    .admin-menu li a.active {
                        background-color: #2c3e50;
                        color: white;
                    }

        .user-list {
            margin-top: 30px;
        }

            .user-list h2 {
                font-size: 24px;
                margin-bottom: 20px;
                color: #2c3e50;
                border-bottom: 2px solid #e0e0e0;
                padding-bottom: 15px;
            }

        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

            .user-table th, .user-table td {
                padding: 15px;
                border-bottom: 1px solid #ecf0f1;
                text-align: left;
            }

            .user-table th {
                background-color: #ecf0f1;
                font-weight: 600;
                color: #34495e;
            }

            .user-table tr:hover {
                background-color: #f9f9f9;
            }

            .user-table td a {
                color: #007bff;
                text-decoration: none;
                transition: color 0.2s ease;
            }

                .user-table td a:hover {
                    color: #0056b3;
                }

        .block-user-button {
            padding: 10px 15px;
            background-color: #e74c3c;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
            font-weight: 500;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .block-user-button:hover {
                background-color: #c0392b;
                transform: translateY(-2px);
            }

        .form-group label {
            font-weight: 500;
            color: #34495e;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 12px;
            transition: border-color 0.2s ease;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
                outline: none;
            }

        .btn-primary {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            transition: background-color 0.3s ease, transform 0.2s ease;
            margin-top: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .btn-primary:hover {
                background-color: #2980b9;
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: #e74c3c;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            transition: background-color 0.3s ease, transform 0.2s ease;
            margin-top: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .btn-danger:hover {
                background-color: #c0392b;
                transform: translateY(-2px);
            }

        .alert-danger {
            background-color: #f2dede;
            border-color: #ebcccc;
            color: #a94442;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .form-check-input:checked {
            background-color: #3498db;
            border-color: #3498db;
        }

        .form-check-label {
            margin-left: 10px;
            color: #34495e;
            font-weight: 500;
        }

        .validation-summary-errors ul {
            list-style: none;
            padding: 0;
            margin: 0;
            color: #e74c3c;
        }

        .validation-summary-errors li {
            margin-bottom: 5px;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">Panou de Administrare</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ManageUsers">Utilizatori</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="ManageCars">Mașini</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Vezi site</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - CarRent - Panou de Administrare
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
