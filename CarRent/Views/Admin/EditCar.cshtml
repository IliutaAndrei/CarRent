@model CarRent.Models.Car

@{
    ViewData["Title"] = "Edit Car";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit Car</h1>

<form asp-action="EditCar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Make">Marcă</label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="YearOfFabrication">Anul Fabricației</label>
        <input asp-for="YearOfFabrication" class="form-control" />
        <span asp-validation-for="YearOfFabrication" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FuelType">Tip Combustibil</label>
        <select asp-for="FuelType" class="form-control" asp-items="Html.GetEnumSelectList<CarRent.Models.FuelType>()"></select>
        <span asp-validation-for="FuelType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TransmissionType">Tip Transmisie</label>
        <select asp-for="TransmissionType" class="form-control" asp-items="Html.GetEnumSelectList<CarRent.Models.TransmissionType>()"></select>
        <span asp-validation-for="TransmissionType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsAvailable">Disponibilă</label>
        <input type="checkbox" asp-for="IsAvailable" class="form-check-input" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerDay">Preț pe Zi</label>
        <input asp-for="PricePerDay" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvează</button>
    <a asp-action="ManageCars" class="btn btn-secondary">Anulează</a>
</form>
